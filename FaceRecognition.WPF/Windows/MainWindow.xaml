<Window x:Class="FaceRecognition.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceRecognition.WPF"
        mc:Ignorable="d"
        Title="تشخیص چهره" Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        >

    <Border CornerRadius="20">

        <Border CornerRadius="20" 
                BorderThickness="2"
                Opacity="1">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="AntiqueWhite" Offset="0"/>
                    <GradientStop Color="Chartreuse" Offset="0.5"/>
                    <GradientStop Color="Azure" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="DarkCyan" Offset="1"/>
                    <GradientStop Color="Azure" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="BurlyWood"
                        BorderThickness="1" CornerRadius="10"
                        >

                    <Grid>

                        <DockPanel>

                            <TextBlock Text="نرم افزار تشخیص چهره" 
                                       FontSize="20" Foreground="Wheat"
                                       VerticalAlignment="Center" Margin="10"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="0,0,10,0">

                                <Image Source="/ico/mini.png" Width="30" Height="30"
x:Name="btn_mini"
 Cursor="Hand" Margin="5" MouseDown="btn_mini_MouseDown"/>

                                <Image Source="/ico/close.png" Width="30" Height="30"
                                       x:Name="btn_Close"
                                        Cursor="Hand" Margin="5" MouseDown="btn_Close_MouseDown"/>

                            </StackPanel>

                        </DockPanel>

                    </Grid>

                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="1">

                    <Grid>

                        <Border>

                            <Button Content="انتخاب تصویر"
x:Name="btn_selecImage"  Margin="262,173,454,183" Width="80" Height="80"
                                    />

                        </Border>

                        <Border>

                            <Image x:Name="img_Selected" Grid.Row="1" 
                                   Stretch="Uniform" Height="80" Width="80" Margin="428,178,268,178"/>

                        </Border>

                        <Border Margin="296,45,296,245">

                            <Label x:Name="lbl_Result" 
                                   Content="نتیجه" Grid.Row="2" FontFamily="B Nazanin"
                                   FontSize="30" FontStyle="Normal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,41,0,0"
                                   />
                            
                        </Border>
                        
                    </Grid>
                    
                </ScrollViewer>

            </Grid>

        </Border>

    </Border>

</Window>